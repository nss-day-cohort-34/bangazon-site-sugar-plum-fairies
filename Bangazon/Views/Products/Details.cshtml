@model Bangazon.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>

<form asp-controller="Orders" asp-action="AddToOrder">
    @Html.HiddenFor(m => m.ProductId)
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImagePath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImagePath)
            </dd>
        </dl>
        <div class="input-group my-3" style="width: 75px;">
            <input type="number" class="form-control" value="1" min="1" max="@Html.DisplayFor(model => model.Quantity)" aria-describedby="basic-addon1" asp-for="Quantity">
        </div>
        <input type="submit" class="btn btn-primary text-white" value="Add To Order" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
