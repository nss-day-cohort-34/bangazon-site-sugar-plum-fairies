@model List<Bangazon.Models.Product>

@{
    ViewData["Title"] = "Index";
}

@if ( Model.Count == 0)
{
    <h1>No Results</h1>
}
else
{
    <h1>Search Results</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                   Price
                </th>
                <th>
                    Quantity
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId"><span class="ml-4">@item.Title</span></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                </tr>
            }
            
            
        </tbody>
    </table>
    }
