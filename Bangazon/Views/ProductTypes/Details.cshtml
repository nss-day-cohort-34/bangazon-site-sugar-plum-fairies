@model Bangazon.Models.ProductTypesViewModels.ProductTypesViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.GroupedProducts[0].TypeName)</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gp in Model.GroupedProducts)
        {

            foreach (var p in gp.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => p.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => p.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => p.Quantity)
                    </td>
                </tr>
            }
        }
        </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
